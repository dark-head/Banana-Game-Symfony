{% extends 'base.html.twig' %}

{% block title %}Game Setting List{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('game_setting_new') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">New</a>
        </div>
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <td>Level</td>
                <td>Total Second</td>
                <td>IsActive</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            {% for setting in gameSetting %}
                <tr>
                    <td>{{ setting.level }}</td>
                    <td>{{ setting.totalSecond }}</td>
                    <td>{{ setting.isActive }}</td>
                    <td><a href="{{ path('game_setting_edit', {'id' : setting.id}) }}">Edit </a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}