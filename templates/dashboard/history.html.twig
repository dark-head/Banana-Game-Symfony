{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}

{% block body %}
    <style>
        h3, table th, table td{
            color: #cccccc;
        }
    </style>
    <div class="container">
        <h1>User Game Sessions</h1>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="easy-tab" data-bs-toggle="tab" href="#easy" role="tab" aria-controls="easy" aria-selected="true">Easy</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="medium-tab" data-bs-toggle="tab" href="#medium" role="tab" aria-controls="medium" aria-selected="false">Medium</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="hard-tab" data-bs-toggle="tab" href="#hard" role="tab" aria-controls="hard" aria-selected="false">Hard</a>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="easy" role="tabpanel" aria-labelledby="easy-tab">
                <h3>Easy Level</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Score</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for session in gameSessions %}
                        {% if session.gameSetting.level == 101 %}
                            <tr>
                                <td>{{ session.score }}</td>
                                <td>{{ session.date|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="medium" role="tabpanel" aria-labelledby="medium-tab">
                <h3>Medium Level</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Score</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for session in gameSessions %}
                        {% if session.gameSetting.level == 102 %}
                            <tr>
                                <td>{{ session.score }}</td>
                                <td>{{ session.date|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="hard" role="tabpanel" aria-labelledby="hard-tab">
                <h3>Hard Level</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Score</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for session in gameSessions %}
                        {% if session.gameSetting.level == 103 %}
                            <tr>
                                <td>{{ session.score }}</td>
                                <td>{{ session.date|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}